<h1>Businesses</h1>

<%= link_to new_organization_business_path(Current.user.organization) do %>
  <button type='button' class='btn btn-primary btn-sm'>New business</button>
<% end %>

<ul class='list-group'>

<% @businessses.each do |business| %>
    <li class='list-group-item'>
      <%= link_to organization_business_path(Current.user.organization, business) do %>
        <%=business.name%>
      <% end %>
    </li>
  <% end %>

</ul>