.support-chat-container
  .container-fluid.support-chat
    .card.bg-body-emphasis
      .card-header.d-flex.flex-between-center.px-4.py-3.border-bottom.border-translucent
        %h5.mb-0.d-flex.align-items-center.gap-2
          Demo widget
          %span.fa-solid.fa-circle.text-success.fs-11
        .btn-reveal-trigger
          %button#support-chat-dropdown.btn.btn-link.p-0.dropdown-toggle.dropdown-caret-none.transition-none.d-flex{"aria-expanded" => "false", "aria-haspopup" => "true", "data-boundary" => "window", "data-bs-reference" => "parent", "data-bs-toggle" => "dropdown", :type => "button"}
